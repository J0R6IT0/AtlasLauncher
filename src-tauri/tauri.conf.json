{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1421",

        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "AtlasLauncher",
        "version": "0.0.0"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.atlaslauncher",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; style-src 'unsafe-inline' 'self'"
        },
        "windows": [
            {
                "decorations": false,
                "fullscreen": false,
                "resizable": true,
                "title": "Atlas Launcher",
                "width": 950,
                "height": 600,
                "minWidth": 800,
                "minHeight": 450
            }
        ]
    }
}
